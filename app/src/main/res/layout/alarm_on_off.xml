<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#3F51b5"
    card_view:cardCornerRadius="12dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">


        <CheckBox
            android:id="@+id/alarm_checkbox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="알림 On"
            android:textColor="@color/caldroid_white"/>

        <RadioGroup
            android:id="@+id/alarm_radio"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/red"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/alarm_on_radio"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="알림 On"
                android:textColor="@color/caldroid_white"/>

            <RadioButton
                android:id="@+id/alarm_off_radio"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="알림 Off"
                android:textColor="@color/caldroid_white"/>
        </RadioGroup>

        <ToggleButton
            android:id="@+id/alarm_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="ToggleButton"
            android:textOff="알림 Off"
            android:textOn="알림 On"/>

    </LinearLayout>

</android.support.v7.widget.CardView>