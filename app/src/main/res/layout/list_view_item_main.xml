<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="16dp">

    <LinearLayout
        android:id="@+id/top_container_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/date_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="0.5"/>

            <TextView
                android:id="@+id/update_hour_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingRight="64dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="0.5"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/temperature_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/margin32"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:layout_weight="0.3"/>

                <ImageView
                    android:id="@+id/weather_image_main"
                    android:layout_width="@dimen/margin64"
                    android:layout_height="@dimen/margin64"
                    android:src="@drawable/ico_wg1"
                    android:layout_weight="0.3"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin16"
                    android:weightSum="1"
                    android:layout_weight="0.3">

                    <TextView
                        android:id="@+id/sunrise_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_weight="0.5"/>

                    <TextView
                        android:id="@+id/sunset_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="0.5"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/frog_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/day_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="0.4"
                android:layout_gravity="left"/>

            <TextView
                android:id="@+id/status_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0.6"/>
        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>

